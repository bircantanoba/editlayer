{
  "name": "editlayer-cms",
  "description": "Editlayer is headless CMS that saves content as JSON",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:functions": "./node_modules/.bin/babel functions/src --out-dir functions/dist",
    "build:hosting": "vue-cli-service build",
    "lint": "vue-cli-service lint && eslint ./functions/src",
    "deploy:only-functions": "npm run build:functions && firebase use development && firebase deploy --only functions",
    "deploy:development": "npm run build:functions && firebase use development && firebase deploy --only functions,firestore,storage",
    "deploy:production": "npm run lint && npm run build:hosting && npm run build:functions && firebase use production && firebase deploy && firebase use development",
    "env:production": "firebase use production && firebase setup:web > .env.production.local && node scripts/environment.js production",
    "env:development": "firebase use development && firebase setup:web > .env.development.local && node scripts/environment.js development",
    "license": "node scripts/license.js",
    "init": "npm install && cd functions && npm install"
  },
  "dependencies": {
    "@jaames/iro": "^3.4.1",
    "animejs": "^2.2.0",
    "autosize": "^4.0.2",
    "axios": "^0.18.0",
    "blob-util": "^2.0.2",
    "caret-pos": "^1.0.1",
    "codemirror": "^5.38.0",
    "copy-to-clipboard": "^3.0.8",
    "dayjs": "^1.7.2",
    "firebase": "^5.0.4",
    "image-compressor.js": "github:raneio/image-compressor",
    "is-upper-case": "^1.1.2",
    "js-base64": "^2.4.5",
    "js-video-url-parser": "^0.2.7",
    "lodash": "^4.17.10",
    "nanoid": "^1.0.4",
    "parse-json": "^4.0.0",
    "slugg": "^1.2.1",
    "title-case": "^2.1.1",
    "typeface-open-sans": "0.0.54",
    "upper-case": "^1.1.3",
    "v-calendar": "^0.9.7",
    "validator": "^10.3.0",
    "vue": "^2.5.16",
    "vue-awesome": "^3.0.2",
    "vue-codemirror": "^4.0.5",
    "vue-quill-editor": "^3.0.6",
    "vue-router": "^3.0.1",
    "vue2-editor": "^2.5.0",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-standard": "^3.0.0-beta.15",
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-preset-env": "^1.7.0",
    "colors": "^1.3.0",
    "node-sass": "^4.9.2",
    "prompt": "^1.0.0",
    "sass-loader": "^7.0.3",
    "string-hash": "^1.1.3",
    "vue-template-compiler": "^2.5.16"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
