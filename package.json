{
  "name": "editlayer-cms",
  "description": "Editlayer is headless CMS that saves content as JSON",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "init": "npm install && cd functions && npm install",
    "serve": "vue-cli-service serve --port 8000 --open",
    "deploy": "node scripts/deploy.js",
    "cors": "node scripts/cors.js",
    "open": "node scripts/open.js",
    "archive": "git archive --format=zip --output=editlayer-archive.zip HEAD"
  },
  "dependencies": {
    "@jaames/iro": "^4.5.1",
    "animejs": "^3.1.0",
    "autosize": "^4.0.2",
    "axios": "^0.19.0",
    "blob-util": "^2.0.2",
    "caret-pos": "^1.2.1",
    "copy-to-clipboard": "^3.2.0",
    "dayjs": "^1.8.16",
    "firebase": "^6.5.0",
    "image-compressor.js": "^1.1.4",
    "is-upper-case": "^1.1.2",
    "js-base64": "^2.5.1",
    "js-video-url-parser": "^0.4.0",
    "lodash": "^4.17.15",
    "nanoid": "^2.1.0",
    "parse-json": "^5.0.0",
    "slugg": "^1.2.1",
    "title-case": "^2.1.1",
    "typeface-open-sans": "0.0.75",
    "v-calendar": "^0.9.7",
    "vue": "^2.6.10",
    "vue-awesome": "^3.5.4",
    "vue-codemirror": "^4.0.6",
    "vue-quill-editor": "^3.0.6",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli": "^3.11.0",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-preset-env": "^1.7.0",
    "firebase-tools": "^7.3.0",
    "node-sass": "^4.12.0",
    "open": "^6.4.0",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
